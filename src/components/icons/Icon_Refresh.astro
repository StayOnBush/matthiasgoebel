---
import refresh from '../../../public/img/icons/refresh.svg';
---
<style lang="scss">
    .icon-refresh {

        &.spin {
            animation: spin 1500ms linear infinite;
        }
    }
    @keyframes spin {
        0% {transform: rotate(0deg);}
        100% {transform: rotate(-360deg);}
    }
</style>
<img src={refresh} class="icon icon-refresh" alt="Refresh">